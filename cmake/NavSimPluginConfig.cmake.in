# NavSim Plugin Development Configuration
# 
# This file is used by external plugin developers to find and link against
# the NavSim plugin framework.
#
# Usage in external plugin CMakeLists.txt:
#   find_package(NavSim REQUIRED)
#   target_link_libraries(my_plugin PUBLIC NavSim::navsim_plugin_framework)

@PACKAGE_INIT@

# 版本信息
set(NavSim_VERSION @PROJECT_VERSION@)

# 依赖项
include(CMakeFindDependencyMacro)
find_dependency(Protobuf REQUIRED)
find_dependency(Eigen3 QUIET)

# 导入目标
include("${CMAKE_CURRENT_LIST_DIR}/NavSimCoreTargets.cmake")

# 提供的组件
set(NavSim_COMPONENTS
    navsim_proto
    navsim_plugin_framework
    navsim_core)

# 检查请求的组件
foreach(component ${NavSim_FIND_COMPONENTS})
    if(NOT ${component} IN_LIST NavSim_COMPONENTS)
        set(NavSim_FOUND FALSE)
        set(NavSim_NOT_FOUND_MESSAGE "Component ${component} not found")
    endif()
endforeach()

# 设置变量
set(NavSim_INCLUDE_DIRS "@PACKAGE_INCLUDE_INSTALL_DIR@")
set(NavSim_LIBRARIES NavSim::navsim_plugin_framework)

# 插件开发辅助宏
include("${CMAKE_CURRENT_LIST_DIR}/NavSimPluginHelpers.cmake")

check_required_components(NavSim)

